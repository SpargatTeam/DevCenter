<h1>Directory: <%= location || '/' %>
</h1>
<ul>
    <% if (directories.length===0 && files.length===0) { %>
        <li>No files or directories found</li>
        <% } %>

            <% directories.forEach(dir=> { %>
                <li>
                    📁 <a href="<%= dir.url %>">
                        <%= dir.name %>
                    </a>
                </li>
                <% }); %>

                    <% files.forEach(file=> { %>
                        <li>
                            📄 <a href="<%= file.url %>" download>
                                <%= file.name %>
                            </a> (Download)
                        </li>
                        <% }); %>
</ul>